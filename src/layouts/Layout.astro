---
import "@/styles/global.css";
import { themeConfig } from "@/theme-config";
import TheDesktopHeader from "@/components/TheDesktopHeader.astro";
import TheMobileHeader from "@/components/TheMobileHeader.astro";
---

<!doctype html>
<html lang={themeConfig.lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{themeConfig.siteTitle}</title>
  </head>
  <body>
    <TheDesktopHeader />
    <TheMobileHeader />
    <div class="h-appbar"></div>
    <slot />
    <script src="@/scripts/scroll.ts"></script>
  </body>
</html>
