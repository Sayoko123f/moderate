---
import type { PostEntry } from "@/utils/content";
import { postURL } from "@/utils/url";

interface Props {
  post: PostEntry;
}

const { post } = Astro.props;
---

<article class="flex">
  <a class="block" href={postURL(post)}>
    <h2 class="text-2xl text-primary">{post.data.title}</h2>
    <h3 class="text-lg text-secondary">{post.data.description}</h3>
  </a>
  <div class=""></div>
</article>
