---
interface Props {
  href: string;
  title: string;
  description?: string;
  cover?: string; // image src
}

const { href, title, description, cover } = Astro.props;
---

<div class="social-card-container">
  <a href={href} class="!no-underline" rel="noopener follow" target="_blank">
    <div class="flex items-center">
      <div class="grow px-5 py-4">
        <div class="line-clamp-2 text-primary text-base font-bold">{title}</div>
        {
          description && (
            <div class="mt-2 text-base text-secondary">{description}</div>
          )
        }
        <div class="mt-3 text-sm text-secondary">{new URL(href).host}</div>
      </div>
      {
        cover && (
          <div
            class="h-[167px] w-[160px] flex-shrink-0 bg-cover bg-center"
            style={`background-image: url(${cover});`}
          ></div>
        )
      }
    </div>
  </a>
</div>
